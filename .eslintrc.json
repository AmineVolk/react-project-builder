{
    "env": {
        "browser": true,
        "node": true,
        "mocha": true,
        "es6": true,
        "amd": true,
        "commonjs": true
    },
    "plugins": [
        "prettier"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:prettier/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "prettier/prettier": "error",
        "max-len": [
            "error",
            100
        ]
    }
}